{
  "name": "@postman/wormhole",
  "version": "1.0.0-alpha.1",
  "description": "A custom network layer for Postman.",
  "main": "index.js",
  "directories": {
    "test": "package_tests"
  },
  "scripts": {
    "build": "node-gyp rebuild",
    "clean": "node-gyp clean",
    "test": "mocha package_tests",
    "lint": "eslint index.js package_tests/",
    "format": "eslint --fix index.js package_tests/",
    "cmake:build": "cmake -S . -B cmake_build && cmake --build cmake_build && ./scripts/make-relocatable-libwormhole.sh",
    "native:format": "clang-format --style=file -i src/*.cc test/*.cc binding/*.cc include/*.h",
    "cmake:test": "ctest --test-dir cmake_build",
    "cmake:all": "npm run cmake:build && npm run cmake:format && npm run cmake:test",
    "cmake:clean": "rm -rf cmake_build",
    "shell:lint": "shellcheck scripts/*.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/postmanlabs/wormhole.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/postmanlabs/wormhole/issues"
  },
  "homepage": "https://github.com/postmanlabs/wormhole#readme",
  "devDependencies": {
    "eslint": "^8.36.0",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.0"
  },
  "dependencies": {
    "node-addon-api": "^6.0.0"
  }
}
